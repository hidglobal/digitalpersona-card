{
  "compilerOptions": {
    "outDir": "dist/@types",
    "emitDeclarationOnly": true,

    "lib": [ "esnext", "dom" ],

    /* Modules */
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": true,

    /* Type Checking */
    "strict": true,
  },
  "exclude": [
      "node_modules",
      "dist",
      "samples",
      "src/**/*.spec.ts"
  ]
}
